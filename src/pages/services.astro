---
import MainLayout from '../layouts/main-layout.astro'
import One from "../icons/one.tsx"
import Two from "../icons/two.tsx"
import Three from "../icons/three.tsx"
import Four from "../icons/four.tsx"
import ServiceIconOne from "../icons/service1-icon.tsx"
import ServiceIconTwo from "../icons/service2-icon.tsx"
import ServiceIconThree from "../icons/service3-icon.tsx"
import ServiceIconFour from "../icons/service4-icon.tsx"


const services = [
	{
		title: 'Project Plan',
		text: 'We begin by understanding your vision — combining precision planning with creative insight.Every project starts with detailed measurements, material selection, and sustainable design choices that align with your unique style and space.'
	},
	{
		title: 'Interior Work',
		text: 'From Diamond to Oriental Panels, our skilled craftsmen transform concepts into reality.We focus on texture, balance, and aesthetic harmony — ensuring every surface and detail reflects both sophistication and durability.'
	},
	{
		title: 'Realization',
		text: 'We bring your dream space to life with seamless execution and sustainable materials.Our team ensures each project is delivered on time, perfectly finished, and built to last — a true reflection of stylish, sustainable living.'
	},
	{
		title: '2d/3d Art Work',
		text: 'We transform ideas into stunning visual concepts — from hand-drawn sketches to precise 3D renderings. Every line, curve, and texture is designed to reflect harmony, functionality, and timeless style.Our digital artistry ensures that each project begins with a clear, captivating vision.'
	},
	{
		title: 'Retail design',
		text: 'We craft retail environments that blend beauty and purpose — spaces that attract, engage, and inspire customers.By integrating Diamond and Oriental Panel elements, we create interiors that reflect brand identity while maintaining sustainable design values.'
	},
	{
		title: 'Decoration Work',
		text: 'Our decoration work brings warmth, depth, and natural character to every interior.From custom wood panels to fine detailing, we ensure every space tells a story of craftsmanship, elegance, and enduring quality.'
	},
]

const howWeWorkDetails = [
  {
    imgIcon: ServiceIconOne,
    numIcon: One,
    img: '/service1.png',
    title: 'Concept & Details',
    info:'Every concept blends creativity and precision, turning ideas into elegant, sustainable interiors crafted with timeless detail.'

  },
  {
    imgIcon: ServiceIconTwo,
    numIcon: Two,
    img: '/service2.png',
    title: 'Idea For Work',
    info:'Transforming ideas into elegant, functional spaces — where creativity meets craftsmanship for exceptional interior results.'

  },
  {
    imgIcon: ServiceIconThree,
    numIcon: Three,
    img: '/service3.png',
    title: 'Design',
    info:'Design that blends creativity, function, and elegance — crafting timeless spaces that inspire modern, sustainable living.'

  },
  {
    imgIcon: ServiceIconFour,
    numIcon: Four,
    img: '/service4.png',
    title: 'Perfection',
    info:'Crafting perfection through thoughtful design — every detail refined to create timeless, functional, and stunning spaces.'

  },
]
---


<MainLayout title = 'Interior Design Services'>

  <!-- Banner Section -->

  <section class="w-full bg-services h-[50vh] flex justify-center items-end">
    <div class="py-[30px] lg:py-[41px] px-[60px] lg:px-[152px] flex flex-col justify-center items-center bg-white rounded-tl-[37px] rounded-tr-[37px] gap-2.5">
      <h1 class="text-[30px] leading-[40px] lg:text-[50px] lg:leading-[62px] font-dm capitalize text-primary-200 ">Services</h1>
      <p class="text-base lg:text-[22px] lg:leading-[33px] tracking-tight font-jost text-text-gray"> <a href="/">Home</a> / Services </p>
    </div>
  </section>

  	<!-- Services Section -->

	<section class="lg:max-w-[1200px] grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-10 lg:gap-y-12 xl:px-0 w-full mx-auto pt-[100px] lg:pt-[200px] justify-between ">
		{
			services.map((service) => {
				return (
					<div class="w-full col-span-1 max-w-[358px] mx-auto flex rounded-[30px] hover:bg-primary-300 px-5 py-[83px] flex-col justify-center items-center gap-3 md:gap-5">
						<h3 class="text-text-blue font-dm text-[22px] md:text-[25px] leading-loose">{service.title}</h3>
						<p class="text-base md:text-[22px] tracking-tight font-jost text-text-gray leading-[33px] text-center"> {service.text}</p>
						
					</div>
				)
			})
		}
	</section>

  <!-- How We Work Section -->
  <section class="px-12 xl:px-0 w-full mt-[100px] lg:mt-[200px] min-h-screen ">
   <div class="w-full lg:max-w-[1200px] p-12 mx-auto lg:px-[116px] lg:py-[160px] bg-primary-300 rounded-[70px] ">
     <h2 class="font-dm tracking-wide text-center leading-[37px] lg:leading-[62.50px] text-[30px] lg:text-[50px] w-full capitalize lg:max-w-[50%] pb-2 mx-auto">How We Work</h2>
		<p class="text-base md:text-[22px] text-center tracking-tight font-jost text-text-gray leading-[33px] lg:max-w-[60%] mx-auto">We believe that great design begins with a clear process and thoughtful collaboration.
Our approach combines creativity, craftsmanship, and precision — ensuring every detail aligns with your vision and lifestyle.
From concept to completion, we turn inspiration into spaces that are both stylish and sustainable.</p>

    <div class="pt-[70px] lg:pt-[100px] flex flex-col gap-[70px] ">
      <!-- Inner Sections -->

      {
        howWeWorkDetails.map((detail, index) => {
          const ImageIcon = detail.imgIcon
          const NumberIcon = detail.numIcon
          const className = `flex justify-between flex-col ${index % 2 === 0 ? "lg:flex-row" : "lg:flex-row-reverse"} gap-[50px] items-center max-w-[967px]`

          return(
            <div class={className}>
              <img src={detail.img} alt=""/>
              <div class="flex flex-col gap-12 lg:gap-[58px]">
                <div class="justify-between hidden lg:flex">
                  <ImageIcon />
                  <NumberIcon/>
                </div>
                <div class="flex flex-col gap-3">
                  <h3 class="text-text-blue font-dm text-[22px] md:text-[25px] leading-loose">{detail.title}</h3>
                  <p class="text-base md:text-[22px] tracking-tight font-jost text-text-gray leading-[33px]">{detail.info}</p>
                </div>
              </div>
            </div>
          )
        })
      }

      <!-- Inner Sections End -->
    </div>
   </div>
  </section>

</MainLayout>

<style>

  /* Hide scrollbar for Chrome, Safari and Opera */
  .no-scrollbar::-webkit-scrollbar {
      display: none;
  }

  /* Hide scrollbar for IE, Edge and Firefox */
  .no-scrollbar {
      -ms-overflow-style: none;  /* IE and Edge */
      scrollbar-width: none;  /* Firefox */
  }

</style>